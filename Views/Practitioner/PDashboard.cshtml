@model massage.Models.ViewModel
<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>Massage</title>

  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
  <!-- Daterange picker -->
  <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
  <!-- summernote -->
  <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <!-- Navbar -->
  <partial name="_NavPartial"/>
  <!-- /.navbar -->

  @{
    ViewModel vm = Model;
    ViewData["Title"] = "Dashboard";
  }
  <partial name="_PSidebarPartial" model="vm"/>

  <!-- Content Wrapper. Contains page content -->

  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h3 class="m-0 text-dark">Schedule for @DateTime.Now.ToString("MMMM dd, yyyy")</h1>
          </div><!-- /.col -->

        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container">
        <!-- Small boxes (Stat box) -->
        <div class="row">
          
            <div class="card card-cascade wider mb-4 wow fadeIn">
              <div class="card-header">
                  <h3>Upcoming Appointments</h3>
              </div>
              <div class="card-body text-center">
                @if(Model.AllReservations.Count <=0 ){
                  <p>No Reservations to Display</p>
                }else{
                  <table class="table table-head-fixed text-nowrap" id="tableId">
                    <thead class="black white-text">
                        <tr class="navigateTest">
                            <th scope="col">Date</th>
                            <th scope="col">Customer</th>
                            <th scope="col">Practitioner</th>
                            <th scope="col">Service</th>
                            <th scope="col">Room</th>
                            <th scope="col">Notes</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                      <tbody>
                  @{
                    foreach (Reservation rsv in Model.AllReservations)
                    {
                      DateTime startT = DateTime.Today.AddHours(rsv.Timeslot.Hour);
                      DateTime endT = startT.AddHours(1);
                      <tr>
                        <td>@String.Format("{0:htt}", startT) - @String.Format("{0:htt}", endT)</td>
                        <td>@rsv.Customer.FirstName @rsv.Customer.LastName[0]</td>
                        <td>@rsv.Practitioner.FirstName @rsv.Practitioner.LastName[0]</td>
                        <td>@rsv.Service.Name</td>
                        <td>Room @rsv.Room.RoomId</td>
                        @if (rsv.Notes == null || rsv.Notes.Length == 0)
                        {
                          <td>(no notes)</td>
                        }
                        else if (rsv.Notes.Length <= 30) {
                          <td>@rsv.Notes</td>
                        }
                        else {
                          string shortNotes = "";
                          for (int i=0; i<=30; i++)
                          {
                            shortNotes = shortNotes + rsv.Notes[i];
                          }
                          <td>@shortNotes</td>
                        }
                        <td>
                              <div class="row">
                                <div class="col">
                                  <form asp-action="CurrentReservation" asp-route-id="@rsv.ReservationId" method="get" style="display:inline;">
                                <input type="hidden" value="@rsv.ReservationId">
                                <input type="submit" value="View">
                              </form>
                                </div>
                              </div>
                              </td>
                      </tr>
                    }
                  }
                </tbody>
              </table>
                }
            </div>
            </div>
        </div>
        <!-- /.row (main row) -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="float-right d-none d-sm-inline">
      Anything you want
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; 2020 <a href="h">massage.com</a>.</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/~plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
<!-- jQuery UI 1.11.4 -->
<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
  $.widget.bridge('uibutton', $.ui.button)
</script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- ChartJS -->
<script src="~/plugins/chart.js/Chart.min.js"></script>
<!-- Sparkline -->
<script src="~/plugins/sparklines/sparkline.js"></script>
<!-- JQVMap -->
<script src="~/plugins/jqvmap/jquery.vmap.min.js"></script>
<script src="~/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
<!-- jQuery Knob Chart -->
<script src="~/plugins/jquery-knob/jquery.knob.min.js"></script>
<!-- daterangepicker -->
<script src="~/plugins/moment/moment.min.js"></script>
<script src="~/plugins/daterangepicker/daterangepicker.js"></script>
<!-- Tempusdominus Bootstrap 4 -->
<script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
<!-- Summernote -->
<script src="~/plugins/summernote/summernote-bs4.min.js"></script>
<!-- overlayScrollbars -->
<script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
</body>
</html>
